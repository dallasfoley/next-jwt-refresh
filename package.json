{
  "name": "next-jwt-refresh",
  "version": "1.0.0",
  "description": "Abstracts away the complexities of refreshing tokens in Next.js",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "next",
    "nextjs",
    "jwt"
  ],
  "author": "Dallas Foley",
  "homepage": "https://github.com/dallasfoley/next-jwt-refresh#readme",
  "bugs": {
    "url": "https://github.com/dallasfoley/next-jwt-refresh/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dallasfoley/next-jwt-refresh.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "license": "MIT",
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "next": "^14.2.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.2"
  }
}
